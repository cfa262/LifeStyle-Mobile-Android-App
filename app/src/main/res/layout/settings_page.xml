<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <Button
        android:text="Motivation Settings                                                            ->"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/WaterReminderSettingsButton"
        android:id="@+id/MotivationSettingsButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textAppearance="@style/TextAppearance.AppCompat"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:textAlignment="viewStart"
        android:onClick="onMotivationSettingsClicked" />

    <Button
        android:text="Productivity Settings                                                          ->"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/MotivationSettingsButton"
        android:id="@+id/ProductivitySettingsButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textAlignment="viewStart"
        android:onClick="onProductivitySettingsClicked" />

    <TextView
        android:text="Settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView5" />

    <Button
        android:text="Water Settings                                                                    ->"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/WaterReminderSettingsButton"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:elevation="0dp"
        android:onClick="onWaterSettingsClicked"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textAlignment="viewStart"
        android:layout_below="@+id/userSettingsButton"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/userSettingsButton"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/switch1"
        android:layout_marginTop="12dp"
        android:text="User Settings                                                                       ->"
        android:textAlignment="viewStart"
        android:textAppearance="@style/TextAppearance.AppCompat" />

</RelativeLayout>