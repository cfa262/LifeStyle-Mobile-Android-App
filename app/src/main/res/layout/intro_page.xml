<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/intro_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.calvin.lifestyle.IntroPage"
    android:background="@android:color/holo_orange_light">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LIFE STYLE!"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="94dp" />

    <Button
        android:text="Settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/BSettings"
        android:onClick="onSettingsClicked"
        android:layout_alignBottom="@+id/BWater"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="10dp"
        android:background="@android:drawable/ic_menu_agenda" />

    <Button
        android:text="Productivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/BProductivity"
        android:layout_marginBottom="24dp"
        android:layout_above="@+id/BSettings"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="onProductivityClicked"
        android:background="@android:drawable/ic_menu_myplaces" />

    <Button
        android:text="Notify Me"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="43dp"
        android:id="@+id/notiButton"
        android:background="@android:drawable/ic_dialog_alert" />

    <Button
        android:text="Water"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/BWater"
        android:onClick="onWaterClicked"
        android:background="?android:attr/textSelectHandle"
        android:backgroundTint="@color/colorPrimary"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/BMotivation"
        android:layout_alignEnd="@+id/BMotivation" />

    <Button
        android:text="Motivation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/BMotivation"
        android:onClick="onMotivationClicked"
        android:layout_alignBaseline="@+id/BProductivity"
        android:layout_alignBottom="@+id/BProductivity"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@android:drawable/btn_star_big_on" />

</RelativeLayout>
