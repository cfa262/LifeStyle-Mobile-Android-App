<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/intro_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.calvin.lifestyle.IntroPage"
    android:background="@android:color/transparent">

    <TextView
        android:text="Welcome to LifeStyle!"
        android:layout_width="104dp"
        android:layout_height="142dp"
        android:id="@+id/textView2"
        android:layout_row="1"
        android:layout_column="1"
        android:textSize="24sp"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:textAllCaps="false"
        android:textColor="@android:color/holo_blue_dark" />

    <Button
        android:layout_width="120dp"
        android:layout_height="117dp"
        android:id="@+id/BSettings"
        android:onClick="onSettingsClicked"
        android:background="@android:drawable/ic_menu_manage"
        android:layout_marginBottom="11dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_row="3"
        android:layout_column="2"
        android:backgroundTint="@android:color/black" />

    <Button
        android:layout_height="103dp"
        android:id="@+id/BWater"
        android:onClick="onWaterClicked"
        android:background="?android:attr/textSelectHandle"
        android:backgroundTint="@color/colorPrimary"
        android:layout_width="100dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_row="3"
        android:layout_column="0" />

    <Button
        android:id="@+id/BMotivation"
        android:onClick="onMotivationClicked"
        android:background="@android:drawable/btn_star_big_off"
        android:layout_width="106dp"
        android:layout_height="127dp"
        android:elevation="0dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/BProductivity"
        android:layout_row="2"
        android:layout_column="0"
        android:backgroundTint="@android:color/holo_orange_light" />

    <Button
        android:layout_height="122dp"
        android:id="@+id/BProductivity"
        android:onClick="onProductivityClicked"
        android:background="@android:drawable/ic_menu_myplaces"
        android:layout_width="121dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_row="2"
        android:layout_column="2"
        android:backgroundTint="@android:color/holo_green_light" />

</GridLayout>
